{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",
    "strict": true,
    "alwaysStrict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
	  "skipLibCheck": true
  },
	"include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
